<Defs>
  <AbilityDef>
    <defName>DragonBondAbility</defName>
    <label>Dragon Bond</label>
    <description>Attempt to form a bond with a dragon. Failure may provoke the dragon.</description>
    <iconPath>Things/GeneIcons/DragonBond</iconPath>
    <verbProperties>
      <verbClass>DragonBond.Verb_DragonBond</verbClass>
      <range>10.9</range>
      <warmupTime>1.0</warmupTime>
      <soundCast>Psycast_Psychic_Effect</soundCast>
      <targetParams>
        <canTargetPawns>true</canTargetPawns>
        <canTargetAnimals>true</canTargetAnimals>
        <mustBeSelectable>true</mustBeSelectable>
      </targetParams>
    </verbProperties>
    <modExtensions>
      <li Class="DragonBond.Verb_DragonBond">
        <allowedAnimals>
          <li>Blue_Dragon</li>
          <li>Green_Dragon</li>
          <li>Purple_Dragon</li>
          <li>Red_Dragon</li>
          <li>White_Dragon</li>
          <li>Yellow_Dragon</li>
          <li>Black_Dragon</li>
          <li>Jade_Dragon</li>
          <li>Gold_Dragon</li>
          <li>Silver_Dragon</li>
          <li MayRequire="onyxae.dragonsdescent"> </li>
        </allowedAnimals>
      </li>
    </modExtensions>
  </AbilityDef>
</Defs>
