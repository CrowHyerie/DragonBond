<Defs>

  <!-- Peasant Apparel -->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Crows_PeasantApparel</defName>
    <label>velonir peasant apparel</label>
    <description>Simple and practical clothing made from sturdy, rough-spun fabric. Built to endure hard labor, it offers enough protection and comfort for daily tasks.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/VelonirPeasant/VelonirPeasant</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <techLevel>Medieval</techLevel>
    <tradeability>Sellable</tradeability>
    <recipeMaker>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
        <li>CraftingSpot</li>
      </recipeUsers>
      <useIngredientsForColor>true</useIngredientsForColor>
    </recipeMaker>
    <costStuffCount>40</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <thingCategories Inherit='False'>
      <li>ApparelMisc</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>1600</WorkToMake>
      <Mass>0.25</Mass>
      <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.22</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.15</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <ForagedNutritionPerDay>0.15</ForagedNutritionPerDay>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/VelonirPeasant/VelonirPeasant</wornGraphicPath>
      <useWornGraphicMask>true</useWornGraphicMask>
      <tags>
        <li>Crows_VelonirPeasant</li>
        <li>Crows_VelonirSquire</li>
      </tags>
      <layers>
        <li>OnSkin</li>
      </layers>
      <defaultOutfitTags>
        <li>Anything</li>
        <li>Worker</li>
      </defaultOutfitTags>
     <canBeDesiredForIdeo MayRequire="Ludeon.RimWorld.Ideology">false</canBeDesiredForIdeo>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel"/>
  </ThingDef> 
</Defs>