<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Dragon Rider Armor -->
    <ThingDef ParentName="ArmorSmithableBase">
    <defName>Crows_DragonRiderArmor</defName>
    <label>dragon rider armor</label>
    <description>An aerodynamic armor set crafted for Velonir dragon riders, balancing protection and flexibility. Lightweight but durable, it ensures mobility during flight and while commanding from the skies.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/DragonRiderArmor/DragonRiderArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
   		<shaderType>CutoutComplex</shaderType>
    </graphicData>
    <techLevel>Medieval</techLevel>
    <tradeability>Sellable</tradeability>
    <recipeMaker>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
      <displayPriority>250</displayPriority>
      <researchPrerequisite>PlateArmor</researchPrerequisite>
      <useIngredientsForColor>true</useIngredientsForColor>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
    </recipeMaker>
    <costStuffCount>320</costStuffCount>
    <stuffCategories>
      <li>DragonScale</li>
      <li>Metallic</li>
    </stuffCategories>
    <thingCategories Inherit='False'>
      <li>ApparelArmor</li>
    </thingCategories>
     <costList>
       <HardScale>350</HardScale>
       <Gold>2</Gold>
     </costList>
    <statBases>
			<WorkToMake>70000</WorkToMake>
			<MaxHitPoints>855</MaxHitPoints>
			<Mass>17</Mass>
			<StuffEffectMultiplierArmor>0.92</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>1.0</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <ArmorRating_Heat>1.2</ArmorRating_Heat> 
			<EquipDelay>20</EquipDelay>
    </statBases>
  	<equippedStatOffsets>
			<MoveSpeed>-1.2</MoveSpeed>
			<SocialImpact>0.30</SocialImpact>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
		</equippedStatOffsets>
    <tradeTags>
      <li>Clothing</li>
      <li>Armor</li>
    </tradeTags>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/DragonRiderArmor/DragonRiderArmor</wornGraphicPath>
 			<useWornGraphicMask>true</useWornGraphicMask>
      <tags>
        <li>Crows_DragonRider</li>
      </tags>
      <layers>
        <li>Shell</li>
      </layers>
      <defaultOutfitTags>
        <li>Anything</li>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
      <canBeDesiredForIdeo>true</canBeDesiredForIdeo>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel"/>
  </ThingDef>

</Defs>
