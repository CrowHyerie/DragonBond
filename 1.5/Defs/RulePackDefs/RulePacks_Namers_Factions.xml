<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Faction Names -->
  <RulePackDef>
    <defName>Crows_VeloniriFactionNames</defName>
    <rulePack>
      <include>
        <li>NamerAnimalDragonMale</li>
        <li>NamerAnimalDragonFemale</li>
      </include>
      <rulesStrings>
        <li>r_name(p=0.35)->[VeloniriPlaceNameUtility]</li>
        <li>r_name->the [political_union_medieval] of [VeloniriPlaceNameUtility]</li>
        <li>r_name->[VeloniriPlaceNameUtility] [political_union_medieval]</li>
      </rulesStrings>
      <rulesFiles>
        <li>political_union_medieval->Words/Nouns/Veloniri_Kingdom</li>
        <li>VeloniriPlaceNameUtility->Words/Nouns/Veloniri_Place_Names</li>
      </rulesFiles>
    </rulePack>
  </RulePackDef>

  <!-- Settlement Names -->
  <RulePackDef>
    <defName>Crows_VeloniriSettlementNames</defName>
    <rulePack>
      <include>
        <li>NamerAnimalDragonMale</li>
        <li>NamerAnimalDragonFemale</li>
      </include>
      <rulesStrings>
        <li>r_name(p=4)->[VeloniriPlaceNameUtility] [medievalSettlementEnd]</li>
        <li>r_name->[NamerAnimalDragonMale]'s [medievalSettlementEnd]-on-the-[TerrainFeature]</li>
        <li>r_name->[NamerAnimalDragonFemale]'s [medievalSettlementEnd]-by-the-[TerrainFeature]</li>
        <li>r_name->[NamerAnimalDragonMale] House</li>
        <li>r_name->[NamerAnimalDragonFemale] House</li>
        <li>r_name->House [NamerAnimalDragonMale]</li>
        <li>r_name->House [NamerAnimalDragonFemale]</li>
      </rulesStrings>
      <rulesFiles>
        <li>medievalSettlementEnd->Words/Nouns/PlaceEnd_Veloniri</li>
        <li>VeloniriPlaceNameUtility->Words/Nouns/Veloniri_Place_Names</li>
      </rulesFiles>
    </rulePack>
  </RulePackDef>
</Defs>
