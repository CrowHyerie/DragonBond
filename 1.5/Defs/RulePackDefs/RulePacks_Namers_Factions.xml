<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Faction Names -->
  <RulePackDef>
    <defName>Crows_VeloniriFactionNames</defName>
    <rulePack>
      <rulesStrings>
        <li>r_name->[VeloniriPlaceNameKingdom] of [VeloniriPlaceNameUtility]</li>
        <li>r_name->[VeloniriPlaceNameUtility] [VeloniriPlaceNameKingdom]</li>
      </rulesStrings>
      <rulesFiles>
        <li>VeloniriPlaceNameKingdom->Words/Nouns/Veloniri_Kingdom</li>
        <li>VeloniriPlaceNameUtility->Words/Nouns/Veloniri_Place_Names</li>
      </rulesFiles>
    </rulePack>
  </RulePackDef>

  <!-- Settlement Names -->
  <RulePackDef>
    <defName>Crows_VeloniriSettlementNames</defName>
    <rulePack>
      <rulesStrings>
        <li>r_name->House [NamerAnimalDragonMale]</li>
        <li>r_name->House [NamerAnimalDragonFemale]</li>
        <li>r_name->House [VeloniriPlaceNameUtility]</li>
        <li>r_name->[NamerAnimalDragonMale]'s [VelonirPlaceNameEnd]-on-the-[TerrainFeature]</li>
        <li>r_name->[NamerAnimalDragonFemale]'s [VelonirPlaceNameEnd]-by-the-[TerrainFeature]</li>
        <li>r_name->[VeloniriPlaceNameUtility] [VelonirPlaceNameEnd]</li>
      </rulesStrings>
      <rulesFiles>
        <li>VelonirPlaceNameEnd->Words/Nouns/PlaceEnd_Veloniri</li>
        <li>VeloniriPlaceNameUtility->Words/Nouns/Veloniri_Place_Names</li>
      </rulesFiles>
    </rulePack>
  </RulePackDef>
</Defs>
