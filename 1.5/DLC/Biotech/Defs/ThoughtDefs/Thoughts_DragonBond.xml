<Defs>
 
  <!-- Bonded Dragon Died -->
  <ThoughtDef>
    <defName>Crows_DragonBondTorn</defName>
    <label>dragon bond torn</label>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>20</durationDays>
    <stackLimit>1</stackLimit>
    <validWhileDespawned>true</validWhileDespawned>
    <lerpMoodToZero>true</lerpMoodToZero>
    <stages>
      <li>
        <label>bonded dragon died</label>
        <baseMoodEffect>-20</baseMoodEffect>
        <!-- Severe mood debuff when dragon dies -->
        <description>My dragon bond with my dragon was torn apart. I feel like part of my mind and emotions are missing.</description>
      </li>
    </stages>
  </ThoughtDef>

  <!-- Dragon Lost -->
  <ThoughtDef ParentName="LostMemory">
    <defName>Crows_DragonBondedLost</defName>
    <showBubble>true</showBubble>
    <durationDays>30</durationDays>
    <stackLimit>5</stackLimit>
    <stackLimitForSameOtherPawn>1</stackLimitForSameOtherPawn>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>bonded dragon {0} lost</label>
        <description>My bonded dragon is lost. I must find it.</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- Sold Dragon -->
  <ThoughtDef>
    <defName>Crows_SoldMyBondedDragon</defName>
    <label>Sold bonded dragon</label>
    <description>This pawn is distressed from selling their bonded dragon.</description>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>10</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>bonded dragon {0} sold</label>
        <description>My bonded Dragon was sold!</description>
        <baseMoodEffect>-20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- Killed Dragon -->
  <ThoughtDef>
    <defName>Crows_KilledMyBondedDragon</defName>
    <label>Killed bonded dragon</label>
    <description>This pawn is furious after their bonded dragon was killed.</description>
    <stages>
      <li>
        <label>bonded dragon {0} killed</label>
        <description>They killed my dragon. I will show them.</description>
        <baseMoodEffect>-50</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- Ignored by Dragon lmao L loser-->
<ThoughtDef>
  <defName>Crows_DragonIgnoredBondAttempt</defName>
  <label>humiliated by dragon</label>
  <thoughtClass>Thought_Memory</thoughtClass>
  <durationDays>2</durationDays>
  <stackLimit>1</stackLimit>
  <stackedEffectMultiplier>1</stackedEffectMultiplier>
  <stages>
    <li>
      <baseMoodEffect>-8</baseMoodEffect>
      <description>I attempted a Dragon Bond and it just scoffed at me!</description>
      <label>humiliated</label>
    </li>
  </stages>
</ThoughtDef>

</Defs>
