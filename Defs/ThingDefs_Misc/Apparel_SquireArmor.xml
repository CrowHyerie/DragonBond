<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Crows_SquireArmor</defName>
    <label>squire armor</label>
    <description>A lightweight leather armor set designed for agility and protection. Crafted from sturdy leathers and featuring reinforced shoulder pads, this armor is both durable and flexible.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/SquireArmor/SquireArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Medieval</techLevel>
    <tradeability>Sellable</tradeability>
    <recipeMaker>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>

    <costStuffCount>75</costStuffCount>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>

    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToMake>12000</WorkToMake>
      <Mass>4</Mass>
      <StuffEffectMultiplierArmor>0.52</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.3</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.2</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>10</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Torso</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/SquireArmor/SquireArmor</wornGraphicPath>
      <useWornGraphicMask>true</useWornGraphicMask>
      <tags>
        <li>Crows_VelonirSquire</li>
        <li>MedievalMilitaryBasic</li>
      </tags>
      <layers>
        <li>Shell</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel"/>
  </ThingDef>

</Defs>
