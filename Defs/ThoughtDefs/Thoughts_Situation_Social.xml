<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!--Bonded Dragon Master-->
  <ThoughtDef>
    <defName>Crows_BondedDragonMaster</defName>
    <thoughtClass>Thought_BondedAnimalMaster</thoughtClass>
    <workerClass>ThoughtWorker_BondedAnimalMaster</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <nullifyingHediffs>
      <li MayRequire="Ludeon.RimWorld.Anomaly">Inhumanized</li>
    </nullifyingHediffs>
    <stages>
      <li>
        <label>{0}'s master</label>
        <description>Being together with my bonded dragon makes me feel alive.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>Crows_NotBondedDragonMaster</defName>
    <thoughtClass>Thought_NotBondedAnimalMaster</thoughtClass>
    <workerClass>ThoughtWorker_NotBondedAnimalMaster</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <nullifyingHediffs>
      <li MayRequire="Ludeon.RimWorld.Anomaly">Inhumanized</li>
    </nullifyingHediffs>
    <stages>
      <li>
        <label>not {0}'s master</label>
        <description>I should be together with my bonded dragon.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>